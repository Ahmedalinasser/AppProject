
@model Employee

@{
    ViewData["Title"] = "Create";
}

<h1>Create New Employee</h1>


<form asp-action="Create">  

    <div class="form-group ">
        <label asp-for="Name" class="col-form-label"></label>
        <input type="text"  asp-for="Name"  class="form-control"/>
        <span asp-validation-for="Name"  class="text-danger"></span>
    </div>

    <div class="form-group ">
        <label asp-for="Age" class="col-form-label"></label>
        <input type="text"  asp-for="Age" class="form-control"/>
        <span asp-validation-for="Age"  class="text-danger"></span>
    </div>

    <div class="form-group ">
        <label asp-for="Address" class="col-form-label"></label>
        <input type="text"  asp-for="Address" class="form-control"/>
        <span asp-validation-for="Address"  class="text-danger"></span>
    </div>

    <div class="form-group ">
        <label asp-for="Salary" class="col-form-label"></label>
        <input type="text"   asp-for="Salary" class="form-control"/>
        <span asp-validation-for="Salary"  class="text-danger"></span>
    </div>


    <div class="form-group ">
        <label asp-for="Email" class="col-form-label"></label>
        <input type="text"  asp-for="Email" class="form-control"/>
        <span asp-validation-for="Email"  class="text-danger"></span>
    </div>

    <div class="form-group ">
        <label asp-for="PhoneNumber" class="col-form-label"></label>
        <input type="text"   asp-for="PhoneNumber" class="form-control"/>
        <span asp-validation-for="PhoneNumber"  class="text-danger"></span>
    </div>

    <div class="form-group ">
        <label asp-for="HireDate" class="col-form-label"></label>
        <input type="datetime-local"  asp-for="HireDate"  class="form-control"/>
        <span asp-validation-for="HireDate"  class="text-danger"></span>
    </div>

    <div class="form-group ">
        <label asp-for="IsActive" class="col-form-label"></label>
        <input type="checkbox"  asp-for="IsActive"  class="form-control"/>
        <span asp-validation-for="IsActive"  class="text-danger"></span>
    </div>

    <input type="submit" value="Create" class="btn btn-success"/> |
    <a class="btn btn-light" asp-action="Index"> Back To list</a>
</form>


@section ValidationScriptSection{

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}
