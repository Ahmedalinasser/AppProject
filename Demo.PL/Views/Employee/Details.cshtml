    ViewData["Title"] = "Details";
}

<h1>Employee @Model.Name</h1>


  

    <div class="form-group ">
        <label asp-for="Name" class="col-form-label"></label>
        <input type="text" disabled asp-for="Name"  class="form-control"/>
      
    </div>

    <div class="form-group ">
        <label asp-for="Age" class="col-form-label"></label>
        <input type="text" disabled asp-for="Age" class="form-control"/>
    </div>

    <div class="form-group ">
        <label asp-for="Address" class="col-form-label"></label>
        <input type="text" disabled asp-for="Address" class="form-control"/>
    </div>

    <div class="form-group ">
        <label asp-for="Salary" class="col-form-label"></label>
        <input type="text" disabled  asp-for="Salary" class="form-control"/>

    </div>


    <div class="form-group ">
        <label asp-for="Email" class="col-form-label"></label>
        <input type="text" disabled asp-for="Email" class="form-control"/>
    </div>

    <div class="form-group ">
        <label asp-for="PhoneNumber" class="col-form-label"></label>
        <input type="text"  disabled asp-for="PhoneNumber" class="form-control"/>
    </div>

