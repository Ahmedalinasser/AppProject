@model Employee
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit @Model.Name</h1>


<form asp-action="Edit">  

    <div class="form-group ">
        <label asp-for="Name" class="col-form-label"></label>
        <input type="text"  asp-for="Name"  class="form-control"/>
        <span asp-validation-for="Name"  class="text-danger"></span>
    </div>

    <div class="form-group ">
        <label asp-for="Age" class="col-form-label"></label>
        <input type="text"  asp-for="Age"  class="form-control"/>
        <span asp-validation-for="Age"  class="text-danger"></span>
    </div>

    <div class="form-group ">
        <label asp-for="Address" class="col-form-label"></label>
        <input type="text"  asp-for="Address" class="form-control"/>
        <span asp-validation-for="Address"  class="text-danger"></span>
    </div>

    <div class="form-group ">
        <label asp-for="Salary" class="col-form-label"></label>
        <input type="text"   asp-for="Salary" class="form-control"/>
        <span asp-validation-for="Salary"  class="text-danger"></span>
    </div>


    <div class="form-group ">
        <label asp-for="Email" class="col-form-label"></label>
        <input type="text"  asp-for="Email" class="form-control"/>
        <span asp-validation-for="Email"  class="text-danger"></span>
    </div>

    <div class="form-group ">
        <label asp-for="PhoneNumber" class="col-form-label"></label>
        <input type="text"   asp-for="PhoneNumber" class="form-control"/>
        <span asp-validation-for="PhoneNumber"  class="text-danger"></span>
    </div>

    <div class="form-group ">
        <label asp-for="HireDate" class="col-form-label"></label>
        <input type="datetime-local"  asp-for="HireDate"  class="form-control"/>
        <span asp-validation-for="HireDate"  class="text-danger"></span>
    </div>

    <div class="form-group ">
        <label asp-for="IsActive" class="col-form-label"></label>
        <input type="checkbox"  asp-for="IsActive"  class="form-control"/>
        <span asp-validation-for="IsActive"  class="text-danger"></span>
    </div>

    <input type="submit" value="Save" class="btn btn-success"/> |
    <a class="btn btn-light" asp-action="Index"> Back To list</a>
</form>
