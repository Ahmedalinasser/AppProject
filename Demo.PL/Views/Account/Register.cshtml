
@model  RegisterViewModel 
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>Register</h1>

	<div class="main-agileinfo">
			<div class="agileits-top">
				<form asp-action="Register" >

					<input  class="text" type="text" asp-for="FName" placeholder="Frist Name" required=""/>
					<span asp-validation-for="FName" class="text-danger"></span>
					
					<input  class="text" type="text" asp-for="LName" placeholder="Last Name" required=""/>
					<span asp-validation-for="LName" class="text-danger"></span>

					<input class="text email" type="email" asp-for="Email" placeholder="Email" required="">
					<span asp-validation-for="Email" class="text-danger"></span>

					<input class="text" asp-for="Password" placeholder="Enter  Password" required=""/>
					<span asp-validation-for="Password" class="text-danger"></span>

					<input class="text w3lpass" type="password" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
					<span asp-validation-for="ConfirmPassword" class="text-danger"></span>

					<div class="wthree-text">


						<label class="anim">
							<input  asp-for="IsAgree" class="checkbox" required="">	
							<span>I Agree To The Terms & Conditions</span>
						</label>
						<div class="clear"> </div>
					</div>
					<input type="submit" value="SIGNUP">
				</form>
				<p>Don have an Account? <a asp-action="Login"> Login Now!</a></p>
			</div>
		</div>
		@section ValidationScriptSection
		{
			<partial  name="_ValidationScriptsPartial"/>
		}