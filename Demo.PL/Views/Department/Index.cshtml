@model IEnumerable<Department>
@{
    ViewData["Title"] = "All Departments";
}



 <a asp-action="Create" class="btn btn-success"> Create New Department </a>
 <br /> 

 @if(TempData["M2"]  is not null)
{
  <div class=" alert alert-primary">
     @* ViewData["Message"]*@
     @TempData["M2"]
 </div>
}

 
@if(Model.Count()>0)
{
    <h1>All Departmens</h1>
    <br />
    <table class="table table-striped table-hover mt-3 ">

        <thead>
            <tr>
                <th>@Html.DisplayNameFor(d=>d.Code)</th>
                <th>@Html.DisplayNameFor(d=>d.Name)</th>
                <th>@Html.DisplayNameFor(d=>d.DateOfCreation)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delet</th>
            </tr>

        </thead>
        <tbody>
            @foreach(var dep in Model)
            {
                <tr>
                    <td> @dep.Code</td>
                    <td> @dep.Name</td>
                    <td> @dep.DateOfCreation</td>
                    <partial name="_ButtonsPartialView" model="dep.Id"/>
                </tr>
            }
        </tbody>
    </table>
}else
{
    <div class="mt-5 alert alert-warning">   
        <h3> There is No Departments</h3>
    </div>
}

