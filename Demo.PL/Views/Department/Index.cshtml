@model IEnumerable<Department>
@{
    ViewData["Title"] = "All Departments";
}



 <a asp-action="Create" class="btn btn-success"> Create New Department </a>
 <br /> 
@if(Model.Count()>0)
{
    <h1>All Departmens</h1>
    <br />
    <table class="table table-striped table-hover mt-3 ">

        <thead>
            <tr>
                <th>@Html.DisplayNameFor(d=>d.Code)</th>
                <th>@Html.DisplayNameFor(d=>d.Name)</th>
                <th>@Html.DisplayNameFor(d=>d.DateOfCreation)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delet</th>
            </tr>

        </thead>
        <tbody>
            @foreach(var dep in Model)
            {
                <tr>
                    <td> @dep.Code</td>
                    <td> @dep.Name</td>
                    <td> @dep.DateOfCreation</td>
                    <td><a asp-action="Details" asp-route-id="@dep.Id" class="btn btn-secondary">Details</a></td>
                    <td><a asp-action="Update"  asp-route-id="@dep.Id" class="btn btn-secondary">Update</a> </td>
                    <td><a asp-action="Delete"  asp-route-id="@dep.Id" class="btn btn-secondary">Delete</a> </td>
                </tr>
            }
        </tbody>
    </table>
}else
{
    <div class="mt-5 alert alert-warning">   
        <h3> There is No Departments</h3>
    </div>
}

