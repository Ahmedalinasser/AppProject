@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Roles</h1>
<a asp-action="Create" class="btn btn-success"> Create Role</a>
<br />

@if(Model.Count() > 0)
{
    <div>
      <div asp-validation-summary="All" class="text-danger"></div>
    </div>
   <div class="row mt-5 mb-3">
       <form asp-action="Index" class="row">

           <div class="col-8">
               <input type="text" name="SearchValue" placeholder="Enter Role Name"/>
           </div>
           <div class="col-4">
               <input type="submit" value="Search" >
           </div>
       </form>
   </div>

    <table class="table table-striped table-hover mt-5 ">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(r => r.Id)</td>
                <td>@Html.DisplayNameFor(r => r.RoleName)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>

            </tr>
        </thead>
        <tbody>
            @foreach(var Role in Model)
            {
                <tr>    
                    <td>@Role.Id</td>
                    <td>@Role.RoleName</td>
                    <partial name="_ButtonsPartialView" model = "@Role.Id"/>

                </tr>
                
            }
        </tbody>
    </table>


}else
{

    <div>
        <h1>"their are No Users"</h1>
    </div>
}