@model IEnumerable<UsersViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Welcom To Users Page</h1>

@if(Model.Count() >0)
{
<br />
   <div>
     <div asp-validation-summary="All" class="text-danger"></div>
   </div>
   <div class="row mt-5 mb-3">
       <form asp-action="Index" class="row">

           <div class="col-8">
               <input type="text" name="SearchValue" placeholder="Enter User Email"/>
           </div>
           <div class="col-4">
               <input type="submit" value="Search" >
           </div>
       </form>
   </div>

    <table class="table table-striped table-hover mt-5 ">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(u => u.Id)</td>
                <td>@Html.DisplayNameFor(u => u.Fname)</td>
                <td>@Html.DisplayNameFor(u => u.Lname)</td>
                <td>@Html.DisplayNameFor(u => u.Email)</td>
                <td>@Html.DisplayNameFor(u => u.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(u => u.Role)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>

            </tr>
        </thead>
        <tbody>
            @foreach(var User in Model)
            {
                <tr>    
                    <td>@User.Id</td>
                    <td>@User.Fname</td>
                    <td>@User.Lname</td>
                    <td>@User.Email</td>
                    <td>@User.PhoneNumber</td>
                    <td>@string.Join("," , User.Role)</td>
                    <partial name="_ButtonsPartialView" model = "@User.Id"/>

                </tr>
                
            }
        </tbody>
    </table>
    
}
else
{

    <div>
        <h1>"their are No Roles"</h1>
    </div>

}